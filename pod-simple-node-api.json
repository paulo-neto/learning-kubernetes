{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "simple-api-pod"
    },
    "spec": {
        "containers": [
            {
                "name": "simple-api",
                "image": "pauloneto/simple-node-api",
                "resources": {
                    "requests": {
                        "cpu": "100m",
                        "memory": "128M"
                    },
                    "limits": {
                        "cpu": "250m",
                        "memory": "256M"
                    }
                },
                "env": [
                    {"name": "PORT", "value": "8080"}
                ],
                "ports": [
                    {
                        "containerPort": 8080
                    }
                ]
            }
        ]
    }
}